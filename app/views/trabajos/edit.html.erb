<% @trabajo.errors.full_messages.each do |mensaje| %>
	<p class="alert alert-danger"><%=mensaje%></p>
<% end %>
<%= form_for (@trabajo) do |f|%>
<h1>Tarea Nueva</h1>
 		<div class="form-group">
		<label>Titulo</label>
		<%= f.text_field :titulo, class: "form-control", required:"true" %>
	<!--<input type="text" name="Titulo" class="form-control">-->
		</div>

		<div class="form-group">
		<label>Descripcion</label >
		<%= f.text_area :descripcion, class: "form-control"%>
		
		</div>

		<%= f.submit "Editar", class: "btn btn-warning"%>
<% end %>
